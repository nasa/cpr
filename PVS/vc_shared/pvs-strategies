   (match - "local_zone(%1, %2, %3)" step (let((fname (freshname "cpr")))
					    (name-replace fname "local_zone(%1, %2, %3)")))
   (branch
    (acsl-to-cpr -3)
    ((then	(repeat(match "times(4,%{name_})" step (rewrite "times_4_ui")))
		(repeat(match "minus(%,1)" step (rewrite "minus_1_ui")))
		(replace -2 :dir rl :hide? t)
