   (repeat (match - "exponentiation.^(2,%1)" step (then (eval-expr "exponentiation.^(2,%1)") (replace -1 :hide? t))))
   (repeat
    (match - "min(%1,%2)" step
	   (then (eval-expr "min(%1,%2)") (replace -1 :hide? t))))
   (lift-if -2)
   (spread
    (split -2)
    ((then
      (lemma "Q_global_zone__def_0")
      (match - "L_global_zone(nz, %2, %3, %4)" step
